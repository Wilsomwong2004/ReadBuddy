{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "ReadBuddy - AI Reading Assistant",
  "description": "Smart AI assistant for reading, translating, and understanding web content with local processing",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ReadBuddy"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs", 
    "sidePanel",
    "commands",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Toggle ReadBuddy side panel"
    }
  }
}