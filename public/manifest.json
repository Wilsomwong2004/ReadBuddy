{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "ReadBuddy - AI Reading Assistant",
  "description": "Smart AI assistant for reading, translating, and understanding web content with local processing",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ReadBuddy"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon/icon-light-16.png",
    "48": "icon/icon-light-48.png",
    "128": "icon/icon-light-128.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs", 
    "sidePanel",
    "commands",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js,content.js"],
      "css": ["content.css"]
    }
  ],
 "commands": {
    "open-summarize": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Open sidebar: Summarize"
    },
    "open-translate": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T"
      },
      "description": "Open sidebar: Translate"
    },
    "open-explain": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Alt+Shift+E"
      },
      "description": "Open sidebar: Explain"
    },
    "open-chat": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      },
      "description": "Open sidebar: Chat"
    }
  }
}